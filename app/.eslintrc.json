{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": [
    "plugin:vue/recommended",
    "plugin:jest/recommended",
    "@vue/airbnb",
    "./.eslintrc-todo.js"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "rules": {
    "vue/max-attributes-per-line": "off"
  },
  "settings" : {
    "import/resolver": {
      "webpack": {
        "config": "app/build/webpack.dev.conf.js"
      }
    }
  }
}
